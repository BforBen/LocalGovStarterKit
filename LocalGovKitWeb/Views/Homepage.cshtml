@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Sections.cshtml";
}

@section PageHeader 
{
	<div class="homepage-header">
		<div class="container">
			<div class="row">
				<div class="col-md-8">
					<div class="homepage-banner">
						<h1>@Umbraco.Field("title")</h1>
						@Umbraco.Field("bodyText")
					</div>
				</div>
				<div class="col-md-4">
					<div class="site-highlights hidden-sm hidden-xs">
						<!-- yes this hardwired - but you can fix that, cant you? -->
						<h2>Highlights</h2>
						<ul>
							<li><a href="/help/">Starter kit help</li>
							<li><a href="/leisure-and-culture/libraries/">Libraries</li>
							<li><a href="/environment-and-waste/rubbish-and-recycling/">Bins and Stuff?</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
}
			
<div class="homepage-links">
@Html.Partial(
            "SectionPageBlock", 
            Model.Content, 
            new ViewDataDictionary()
            {
                { "mainCount", 6 },
				{ "mainName", "" }
            }
)
</div>
	
<div class="row featured">
	<div class="col-md-6">
		@Html.Partial("HomepageNews") 
	</div>

	<div class="col-md-6">
		@Html.Partial("HomepageEvents") 
	</div>
</div>

@section Footer { }

@section Scripts { } 